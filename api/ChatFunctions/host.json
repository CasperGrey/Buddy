{
  "version": "2.0",
  "logging": {
    "applicationInsights": {
      "samplingSettings": {
        "isEnabled": true,
        "excludedTypes": "Request"
      }
    },
    "logLevel": {
      "default": "Information",
      "Host.Results": "Information",
      "Function": "Information",
      "Host.Aggregator": "Information",
      "Microsoft": "Warning"
    },
    "console": {
      "isEnabled": true
    },
    "fileLoggingMode": "always"
  },
  "extensions": {
    "http": {
      "routePrefix": "api",
      "maxOutstandingRequests": 200,
      "maxConcurrentRequests": 100,
      "dynamicThrottlesEnabled": true,
      "hsts": {
        "isEnabled": true,
        "maxAge": "365.00:00:00",
        "includeSubDomains": true,
        "preload": false
      },
      "cors": {
        "allowedOrigins": [
          "http://localhost:3000",
          "https://buddy-chat-app.azurewebsites.net"
        ],
        "allowedMethods": ["GET", "POST", "OPTIONS"],
        "allowedHeaders": [
          "Content-Type",
          "Authorization",
          "X-Requested-With",
          "Accept",
          "Origin",
          "Access-Control-Allow-Headers",
          "Access-Control-Allow-Origin",
          "Access-Control-Allow-Methods"
        ],
        "allowCredentials": true,
        "maxAge": 86400
      }
    },
    "eventGrid": {
      "maxBatchSize": 1,
      "prefetchCount": 1
    }
  },
  "webSocket": {
    "enabled": true,
    "keepAliveIntervalInSeconds": 30,
    "handshakeTimeoutInSeconds": 15,
    "bufferSizeInBytes": 4096
  }
}
